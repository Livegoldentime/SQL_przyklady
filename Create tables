CREATE TABLE Customers (CustomerID int, CustomerName varchar(25), ContactName varchar(25), Address varchar(25),
                        City varchar(25), PostalCode varchar(25), Country varchar(25));
                        
CREATE TABLE Categories (CategoryID int, CategoryName varchar(25), Description varchar(40));

CREATE TABLE Employees (EmployessID int, LastName varchar(25), FirstName varchar(25), BirthDate date, Photo varchar(25), Notes varchar(100));

CREATE TABLE OrderDetails (OrderDetailID int, OrderID int, ProductID int, Quantity int);

CREATE TABLE Orders (OrderID int, CustomerID int, EmployeeID int, OrderDate date, ShipperID int);

CREATE TABLE Products (ProductID int, ProductName varchar(25), SupplierID int, CategoryID int, Unit varchar(25), Price int);

CREATE TABLE Shippers (ShipperID int, ShipperName varchar(25), Phone varchar(25));

CREATE TABLE Suppliers (SupplierID int, SupplierName varchar(25), ContactName varchar(40), Address varchar(25), City varchar(25),
                        PostalCode varchar(25), Country varchar(25), Phone varchar(25));
